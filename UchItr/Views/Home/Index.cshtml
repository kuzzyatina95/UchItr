@model IEnumerable<UchItr.Models.Post>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

@foreach (var post in Model)
{
    <div class="row">
        <div class="col-lg-8">
            <h1>@Html.DisplayFor(modelItem => post.Title)</h1>
            <p class="lead">
                by <a href="#">@Html.DisplayFor(modelItem => post.User.Name) @Html.DisplayFor(modelItem => post.User.Surname)</a>
            </p>
           
            <hr>
            <p><span class="glyphicon glyphicon-time"></span> Posted on August @Html.DisplayFor(modelItem=>post.PostedOn)</p>
            <hr>

            <!-- Preview Image -->
            <img class="img-responsive" src="http://placehold.it/900x300" alt="">

            <hr>
            <h4>@Html.DisplayFor(modelItem => post.ShortDescription)</h4>
            @Html.Raw(post.Body)
            @Html.ActionLink("Подробнее...", "DetailsPost", new { id = post.Id })
            <hr />
        </div>  
    </div>
}
