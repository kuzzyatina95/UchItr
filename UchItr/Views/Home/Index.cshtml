@model IEnumerable<UchItr.Models.Post>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
@foreach (var post in Model)
{
    <div class="row">
        <div class="col-md-10">
            <h2>@Html.DisplayFor(modelItem => post.Title)</h2>
            <h3>@Html.DisplayFor(modelItem => post.User.Name)</h3>
            <h4>@Html.DisplayFor(modelItem => post.ShortDescription)</h4>
            @Html.Raw(post.Body)
            <hr />
            @Html.ActionLink("Подробнее...", "Details", new { id = post.Id }) |
        </div>
    </div>
}
