@model UchItr.Models.Post

@{
    ViewBag.Title = "DetailsPost";
}

<h2>DetailsPost</h2>

<div class="row">
    <div class="col-lg-8">
        <h1>@Html.DisplayFor(modelItem => modelItem.Title)</h1>
        <p class="lead">
            by <a href="#">@Html.DisplayFor(modelItem => modelItem.User.Name) @Html.DisplayFor(modelItem => modelItem.User.Surname)</a>
            Category @Html.DisplayFor(modelItem => modelItem.Category.Name)
        </p>
        <hr>
        <p><span class="glyphicon glyphicon-time"></span> Posted on @Html.DisplayFor(modelItem => modelItem.PostedOn)</p>
        <hr>

        <!-- Preview Image -->
        <img class="img-responsive" src="http://placehold.it/900x300" alt="">

        <hr>
        <h4>@Html.DisplayFor(modelItem => modelItem.ShortDescription)</h4>
        @Html.Raw(Model.Body)

        <hr />
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
